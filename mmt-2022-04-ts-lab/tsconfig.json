{
  "compilerOptions": {
    "module": "ES6",
    "target": "ES6",
    "lib": ["DOM", "ESNext"],
    "noImplicitAny": true,
    "strict": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "dist",
    "sourceMap": true,
    "watch": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
